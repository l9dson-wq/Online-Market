@using StoackApp.Core.Application.ViewModels.Products
@model SaveProductViewModel
@{   
    ViewData["Title"] = "Eliminar producto";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Esta seguro que desea eliminar el producto @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Product" asp-action="DeletePost">                 

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-primary">Eliminar</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-warning">Volver atras</a>
                </form>
            </div>
        </div>
    </div>
</div>

